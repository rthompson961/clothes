{% extends 'base.html.twig' %}

{% block title %}Basket{% endblock %}

{% block body %}
<div id="basket">
    <h2>Basket</h2>

    {% if units %}
        {% for flash_message in app.session.flashBag.get('basket') %}
            <p class="flash">{{ flash_message }}</p>
        {% endfor %}

        <p class="count">
        You have {{ app.session.get('basket_count') }} Item{% if app.session.get('basket_count') > 1 %}s{% endif %}
        </p>

        <table>
            <tr>
                <th colspan="2">Item</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
                <th>Remove</th>
            </tr>
            {% for unit in units %}
            <tr>
                <td>
                    <a href="{{ path('product', {'id' : unit.product_id}) }}">
                        <img src="{{ asset('img/product/' ~ "%03d"|format(unit.product_id) ~ '.jpg') }}" 
                            alt="{{ unit.name }}" 
                        />
                    </a>
                </td>
                <td class="name">{{ unit.name }}</td>
                <td>{{ unit.size }}</td>
                <td>&pound;{{ (unit.price / 100)|number_format(2, '.', ',') }}</td>
                <td>{{ unit.quantity }}</td>
                <td>&pound;{{ (unit.subtotal / 100)|number_format(2, '.', ',') }}</td>
                <td><a class="remove" href="{{ path('basket_remove', {'id' : unit.id }) }}">‚ùå</a></td>
            </tr>
            {% endfor %}
            <tr>
                <th colspan="5"><a class="empty" href="{{ path('basket_empty') }}"><button>Empty Basket</button></a></th>
                <th class="total">&pound;{{ (total / 100)|number_format(2, '.', ',') }}</th>
            </tr>
        </table>

        <a href="{{ path('address_select') }}"><button>Checkout</button></a>
    {% else %}
        <p class="empty">Your shopping basket is empty</p>
    {% endif %}
</div>
{% endblock %}

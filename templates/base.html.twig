<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{% block title %}Fashion Shop{% endblock %}</title>
{% block stylesheets %}
<link href="{{ asset('css/style.css') }}" rel="stylesheet" />
<script src="https://pi-test.sagepay.com/api/v1/js/sagepay.js"></script>
{% endblock %}
</head>

<body>
<div id="container">
<div id="header" class="clearfix">
    <div id="header-left">
        <h1><a href="{{ path('shop') }}">Clothes Shop</a></h1>
    </div>
    <div id="header-right">
        {% if is_granted('ROLE_USER') %}
            <p><b>Hello,</b> {{ app.user.email }}</p>
            <p><a href="{{ path('app_logout') }}">Logout</a></p> 
        {% else %}
            <p><b>Hello,</b> Guest</p>
            <p><a href="{{ path('app_login') }}">Login</a></p>          
        {% endif %}
        <p><a class="basket" href="{{ path('basket') }}">Basket</a></p>
    </div>
</div>

<div id="main" class="clearfix">
{% block body %}{% endblock %}
</div>

</div>
{% block javascripts %}{% endblock %}
</body>
</html>
